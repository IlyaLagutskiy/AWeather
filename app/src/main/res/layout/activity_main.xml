<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bckgrnd"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/city"
            android:textColor="@color/colorBackgroundText"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/currentTemperature"
            android:textAlignment="center"
            android:textColor="@color/colorCurrentTemperature"
            android:textSize="70sp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/currentCloudAmount"
            android:textAlignment="center"
            android:textColor="@color/colorBackgroundText"
            android:textSize="18sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/textTodayStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/timeNow">

                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ios11weatherrainicon">

                </ImageView>

                <TextView
                    style="@style/textTodayStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/currentTemperature">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/textTodayStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/timeNowPlus1H">

                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ios11weatherdrizzleicon">

                </ImageView>

                <TextView
                    style="@style/textTodayStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/temperaturePlus1H">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/textTodayStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/timeNowPlus2H">

                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ios11weathercloudyicon">

                </ImageView>

                <TextView
                    style="@style/textTodayStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/temperaturePlus2H">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/textTodayStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/timeNowPlus3H">

                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ios11weathercloudyicon">

                </ImageView>

                <TextView
                    style="@style/textTodayStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/temperaturePlus3H">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/textTodayStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/timeNowPlus4H">

                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ios11weatherclearnighticon">

                </ImageView>

                <TextView
                    style="@style/textTodayStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/temperaturePlus4H">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TableRow>

                <TextView
                    style="@style/textWeatherTableLeft"
                    android:text="@string/datePlus1D" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    app:srcCompat="@drawable/ios11weatherdrizzleicon" />

                <TextView
                    style="@style/textWeatherTableRight"
                    android:text="@string/weatherPlus1D" />

            </TableRow>

            <TableRow>

                <TextView
                    style="@style/textWeatherTableLeft"
                    android:text="@string/datePlus2D" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    app:srcCompat="@drawable/ios11weatherheavyrainicon" />

                <TextView
                    style="@style/textWeatherTableRight"
                    android:text="@string/weatherPlus2D" />

            </TableRow>

            <TableRow>

                <TextView
                    style="@style/textWeatherTableLeft"
                    android:text="@string/datePlus3D" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    app:srcCompat="@drawable/ios11weathersunnyicon">

                </ImageView>

                <TextView
                    style="@style/textWeatherTableRight"
                    android:text="@string/weatherPlus3D" />

            </TableRow>

            <TableRow>

                <TextView
                    style="@style/textWeatherTableLeft"
                    android:text="@string/datePlus4D" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    app:srcCompat="@drawable/ios11weatherpartlysunnyicon">

                </ImageView>

                <TextView
                    style="@style/textWeatherTableRight"
                    android:text="@string/weatherPlus4D" />

            </TableRow>

            <TableRow>

                <TextView
                    style="@style/textWeatherTableLeft"
                    android:text="@string/datePlus5D" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    app:srcCompat="@drawable/ios11weathercloudyicon">

                </ImageView>

                <TextView
                    style="@style/textWeatherTableRight"
                    android:text="@string/weatherPlus5D" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/reload"
        android:id="@+id/refreshButton"/>

</RelativeLayout>